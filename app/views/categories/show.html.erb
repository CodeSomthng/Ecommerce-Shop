<h2 style="color: #B00100; margin: 0 auto"> Products </h2> <br/>
<%=current_user.inspect %>
<br/>
<h1> <%= link_to "New Product", new_category_product_path(@category, @product) %></h1>

<% @category.products.each do |product|  %>
    <ul>
      <li> <%= link_to product.title, category_product_path(@category, product) %> </li>
      <li> <%= product.description %> </li>
      <li> <%= product.price %> </li>
      <p> <%= link_to "Buy", user_carts_path(user_id: current_user.id, product_id: product.id), method: :post %> </p>
    </ul>
<% end %>


<% if can? :update, @category %>
  <%= link_to "Edit", category_path(@category) %>
<% end %>